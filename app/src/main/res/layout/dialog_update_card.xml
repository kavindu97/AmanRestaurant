<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="update card"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textStyle="bold"
        app:fontFamily="@font/averia_gruesa_libre" />

    <EditText
        android:id="@+id/editTextCardHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cardholder Name"
        android:textColorHint="@android:color/black"
        android:textSize="19sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextCardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"
        android:textSize="19sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:text="Select Card" />

    <Spinner
        android:id="@+id/spinnerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/cards" />

    <EditText
        android:id="@+id/editTextPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Phone Number"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHighlight="@android:color/black"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/editTextCardExpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789/"
        android:hint="Expiration Date"
        android:inputType="number"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="19sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editTextCardCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="CVV"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/buttonEditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDAB48"
        android:text="update Card"
        android:textColorLink="#EDAB48"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>