<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="update card"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextCardHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cardholder Name" />

    <EditText
        android:id="@+id/editTextCardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:text="Select Card" />

    <Spinner
        android:id="@+id/spinnerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/cards" />

    <EditText
        android:id="@+id/editTextPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Phone Number"
        android:inputType="number"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/editTextCardExpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789/"
        android:hint="Expiration Date"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextCardCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="CVV"
        android:inputType="number" />


    <Button
        android:id="@+id/buttonEditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update Card" />



</LinearLayout>